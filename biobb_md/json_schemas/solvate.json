{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_md/json_schemas/1.0/solvate",
    "name": "biobb_md Solvate",
    "title": "Wrapper of the GROMACS solvate  module.",
    "description": null,
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "GROMACS solvate",
            "version": ">5.1",
            "license": "LGPL 2.1"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_solute_gro_path",
        "output_gro_path",
        "input_top_zip_path",
        "output_top_zip_path"
    ],
    "properties": {
        "input_solute_gro_path": {
            "type": "string",
            "description": "Path to the input GRO file",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/data/gromacs/solvate.gro",
            "enum": [
                ".*\\.gro$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.gro$",
                    "description": "Path to the input GRO file",
                    "edam": "format_2330"
                }
            ]
        },
        "output_gro_path": {
            "type": "string",
            "description": "Path to the output GRO file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/reference/gromacs/ref_solvate.gro",
            "enum": [
                ".*\\.gro$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.gro$",
                    "description": "Path to the output GRO file",
                    "edam": "format_2330"
                }
            ]
        },
        "input_top_zip_path": {
            "type": "string",
            "description": "Path the input TOP topology in zip format",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/data/gromacs/solvate.zip",
            "enum": [
                ".*\\.zip$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.zip$",
                    "description": "Path the input TOP topology in zip format",
                    "edam": "format_3987"
                }
            ]
        },
        "output_top_zip_path": {
            "type": "string",
            "description": "Path the output topology in zip format",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_md/raw/master/biobb_md/test/reference/gromacs/ref_solvate.zip",
            "enum": [
                ".*\\.zip$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.zip$",
                    "description": "Path the output topology in zip format",
                    "edam": "format_3987"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "input_solvent_gro_path": {
                    "type": "string",
                    "default": "\"spc216.gro\"",
                    "wf_prop": false,
                    "description": "Path to the GRO file contanining the structure of the solvent."
                },
                "gmx_lib": {
                    "type": "string",
                    "default": "None",
                    "wf_prop": false,
                    "description": "Path set GROMACS GMXLIB environment variable."
                },
                "gmx_path": {
                    "type": "string",
                    "default": "\"gmx\"",
                    "wf_prop": false,
                    "description": "Path to the GROMACS executable binary."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": "True",
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": "False",
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                },
                "container_path": {
                    "type": "string",
                    "default": "None",
                    "wf_prop": false,
                    "description": "Path to the binary executable of your container."
                },
                "container_image": {
                    "type": "string",
                    "default": "\"gromacs/gromacs:latest\"",
                    "wf_prop": false,
                    "description": "Container Image identifier."
                },
                "container_volume_path": {
                    "type": "string",
                    "default": "\"/data\"",
                    "wf_prop": false,
                    "description": "Path to an internal directory in the container."
                },
                "container_working_dir": {
                    "type": "string",
                    "default": "None",
                    "wf_prop": false,
                    "description": "Path to the internal CWD in the container."
                },
                "container_user_id": {
                    "type": "string",
                    "default": "None",
                    "wf_prop": false,
                    "description": "User number id to be mapped inside the container."
                },
                "container_shell_path": {
                    "type": "string",
                    "default": "\"/bin/bash\"",
                    "wf_prop": false,
                    "description": "Path to the binary executable of the container shell."
                }
            }
        }
    },
    "additionalProperties": false
}